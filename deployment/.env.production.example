# Production Environment Configuration
# Copy this file to .env.production and update values

# Application Settings
NODE_ENV=production
GO_ENV=production
PORT=8080
FRONTEND_PORT=3000

# Domain Configuration
DOMAIN=your-domain.com
SSL_EMAIL=admin@your-domain.com

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=internship_prod
DB_USER=internship_user
DB_PASSWORD=your_very_secure_database_password_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_minimum_32_characters_long
JWT_EXPIRES_IN=24h

# Redis Configuration
REDIS_PASSWORD=your_redis_password_here

# CORS Configuration
CORS_ORIGIN=https://your-domain.com

# Rate Limiting
RATE_LIMIT=100

# Logging
LOG_LEVEL=info
ENABLE_METRICS=true

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password

# Monitoring (Optional)
GRAFANA_PASSWORD=your_grafana_admin_password

# Security Headers
SECURITY_HEADERS=true
HSTS_MAX_AGE=31536000

# File Upload Configuration
MAX_FILE_SIZE=10MB
UPLOAD_PATH=/app/uploads

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *

# Performance Configuration
DB_MAX_CONNECTIONS=20
DB_IDLE_TIMEOUT=300s
CACHE_TTL=3600

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_PASSWORD_RESET=true
ENABLE_FILE_UPLOAD=true

# Third-party Integrations
# GOOGLE_CLIENT_ID=your_google_client_id
# GOOGLE_CLIENT_SECRET=your_google_client_secret
# FACEBOOK_APP_ID=your_facebook_app_id
# FACEBOOK_APP_SECRET=your_facebook_app_secret

# Notification Settings
NOTIFICATION_EMAIL_FROM=noreply@your-domain.com
NOTIFICATION_EMAIL_NAME=Internship Management System

# System Maintenance
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=System is under maintenance. Please try again later.

# Analytics (Optional)
# GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
# HOTJAR_ID=your_hotjar_id

# Error Tracking (Optional)
# SENTRY_DSN=your_sentry_dsn_here

# CDN Configuration (Optional)
# CDN_URL=https://cdn.your-domain.com
# STATIC_FILES_URL=https://static.your-domain.com