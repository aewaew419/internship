# Server Configuration
PORT=8080
ENVIRONMENT=development

# Database Configuration
DATABASE_URL=root:password@tcp(localhost:5432)/internship_dev?charset=utf8mb4&parseTime=True&loc=Local

# Database Connection Pool Settings
DB_MAX_IDLE_CONNS=10
DB_MAX_OPEN_CONNS=100
DB_CONN_MAX_LIFETIME=1h
DB_CONN_MAX_IDLE_TIME=30m

# Database Logging and Performance
DB_LOG_LEVEL=info
DB_SLOW_THRESHOLD=200ms
DB_AUTO_MIGRATE=false

# JWT Configuration
JWT_SECRET=your-secret-key-here

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# PDF Generation Configuration
PDF_TEMPLATE_PATH=./templates

# Two-Factor Authentication Configuration
TOTP_ISSUER=Super Admin System
TOTP_SECRET_LENGTH=32
TOTP_CODE_LENGTH=6
TOTP_PERIOD=30s
TOTP_SKEW=1

# Backup Codes Configuration
BACKUP_CODE_COUNT=10
BACKUP_CODE_LENGTH=8

# 2FA Security Configuration
ENCRYPTION_KEY=your-32-byte-encryption-key-here
2FA_MAX_ATTEMPTS=3
2FA_LOCKOUT_DURATION=15m

# 2FA Rate Limiting Configuration
2FA_RATE_LIMIT_WINDOW=15m
2FA_RATE_LIMIT_ATTEMPTS=5

# QR Code Configuration
QR_CODE_SIZE=256

# Redis Configuration for 2FA Caching
REDIS_URL=redis://localhost:6379
2FA_CACHE_EXPIRATION=1h